<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sl_white"
    android:orientation="vertical"
    android:padding="@dimen/sl_basic_dimen_4dp">

    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/sl_basic_dimen_8dp"
        android:textColor="@color/sl_basic_gray" />

    <TextView
        android:id="@+id/tv_dialog_body"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/sl_basic_dimen_8dp"
        android:textColor="@color/sl_basic_gray" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_dialog_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sl_basic_dimen_4dp"
            android:layout_weight="1"
            android:text="@string/sl_cancelar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b_dialog_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sl_basic_dimen_4dp"
            android:layout_weight="1"
            android:text="@string/sl_aceptar" />

    </TableRow>


</LinearLayout>